<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../layouts/head', { title: 'Dashboard | Nom Nom' }) %>
    <link rel="stylesheet" href="/css/dashboard.css">

</head>
<body>
    <%- include ('../partials/sidebar') %>
    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>
            <!-- <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div> -->
            
            <img src="images/profile.jpg" alt="">
        </div>
        <div class="dash-content">
            <div class="overview">
                <div class="title">
                    <i class="uil uil-tachometer-fast-alt"></i>
                    <span class="text">Dashboard</span>
                </div>
                <div class="boxes">
                    <div class="box box1">
                        <i class="uil uil-dollar-alt"></i>
                        <span class="text">Total Earn</span>
                        <span class="number">5.555.555 VNĐ</span>
                    </div>
                    <div class="box box2">
                        <i class="uil uil-users-alt"></i>
                        <span class="text">Users</span>
                        <span class="number">20,120</span>
                    </div>
                    <div class="box box3">
                        <i class="uil uil-store"></i>
                        <span class="text">Store</span>
                        <span class="number">50</span>
                    </div>
                    <div class="box box4">
                        <i class="uil uil-laptop-cloud"></i>
                        <span class="text">Status</span>
                        <span class="number">Online</span>
                    </div>
                </div>
            </div>
            <div class="activity">
                <div class="title">
                    <i class="uil uil-clock-three"></i>
                    <span class="text">Recent Activity</span>
                </div>
                <div class="activity-data">
                    <div class="data square">
                        <div>
                            <span class="data-title">Best Store</span>
                            <span class="data-sub-title">Order</span>
                            
                        </div>
                        <div>
                            <div class="data-names">
                                <span class="data-list">FPT HCM</span>
                                <span class="data-list">FPT HaNoi</span>
                                <span class="data-list">FPT CuChi</span>
                            </div>
                            <div class="data-orders">
                                <span class="data-list">50</span>
                                <span class="data-list">15</span>
                                <span class="data-list">10</span>
                            </div> 
                        </div>                                                           
                    </div>
                    <div class="data square">
                        <div>
                            <span class="data-title">Top User</span>
                            <span class="data-sub-title">Order</span>
                        </div>                        
                        <div>
                            <div class="data-names">
                                <span class="data-list">Võ Minh Mẫn</span>
                                <span class="data-list">Mai Chí Linh</span>
                                <span class="data-list">Phan Anh</span>
                            </div>
                            <div class="data-orders">
                                <span class="data-list">50</span>
                                <span class="data-list">15</span>
                                <span class="data-list">10</span>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="chart">
                <div class="title">
                    <i class="uil uil-clock-three"></i>
                    <span class="text">Chart InCome</span>
                </div>
                <div class="chartsBx">
                    <div class="chart" style="display: none;"> <canvas id="chart-1"></canvas> </div>
                    <div class="chart"> <canvas id="chart-2"></canvas> </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/js/dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>
    <script src="/js/chartsJS.js"></script>
    <script>document.getElementById('logout-button').addEventListener('click', function() {
        // Clear cookies
        document.cookie = "username=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
        document.cookie = "password=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
    
        // Clear session storage
        sessionStorage.removeItem('username');
        sessionStorage.removeItem('password');
    
        // Optionally redirect to a login page or home page after logout
        window.location.href = '/login'; // Change this to your login or home page
    });</script>
</body>
</html>